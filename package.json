{
  "name": "DrodReact",
  "version": "1.0.0",
  "description": "react+webpack",
  "keywords": [
    "react",
    "webpack",
    "html"
  ],
  "main": "index.js",
  "scripts": {
    "dev": "better-npm-run dev",
    "compile": "better-npm-run compile"
  },
  "betterScripts": {
    "dev": {
      "command": "node server.js",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "compile": {
      "command": "rimraf dist && webpack && xcopy /s /y \"%cd%/src/static\" \"%cd%/dist\"",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "author": "Drod",
  "license": "ISC",
  "devDependencies": {
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-loader": "^6.4.1"
  },
  "dependencies": {
    "babel-preset-react": "^6.24.1",
    "better-npm-run": "0.0.15",
    "history": "^3.3.0",
    "html-webpack-plugin": "^2.28.0",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-redux": "^5.0.4",
    "react-router": "^3.0.5",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.4.2"
  }
}
